<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sectionsListForTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sectionsListForTeacher"
        android:layout_centerHorizontal="true"
        android:text="Добавить новую секцию"
        android:background="#EEB93C"
        android:onClick="toCreateHobbyActivity"/>
</RelativeLayout>